<div class="row m-lr-0" ng-class="{ 'm-b-60': vm.marginAfter }">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div>
                    <strong>
                        <span ng-bind="::vm.name"></span>
                    </strong>
                </div>
                <div>
                    Total results:
                    <span ng-bind="vm.model.totalCount"></span>
                </div>
            </div>
            <div class="panel-body p-b-5">
                <p ng-if="vm.model.totalCount === '0'">
                    No images found.
                </p>
                <div ng-repeat="image in vm.model.imageItems" class="col-lg-3 col-md-4 col-xs-6 thumb">
                    <a class="thumbnail" href="{{::image.link}}" target="_blank">
                        <img class="img-responsive" ng-src="{{::image.link}}" title="{{::image.title}}">
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>