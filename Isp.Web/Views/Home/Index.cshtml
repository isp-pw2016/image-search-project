<div ng-controller="HomeController as vm">
    <div class="row">
        <div class="col-lg-12 m-b-30">
            <div class="input-group input-group-lg">
                <input ng-model="vm.model.query" type="text" class="form-control" placeholder="Search for images...">
                <span class="input-group-btn">
                    <button ng-click="vm.startProcedure()" ng-disabled="vm.isBusy" class="btn btn-default" type="button">
                        Start the querying procedure
                    </button>
                </span>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div ng-if="vm.isBusy">
            <div class="loader"></div>
        </div>
        <div ng-if="!vm.isBusy">
            <div ng-repeat="image in vm.results.google.imageFetch.imageItems track by $index" class="col-lg-3 col-md-4 col-xs-6 thumb">
                <a class="thumbnail" href="{{::image.link}}" target="_blank">
                    <img class="img-responsive" ng-src="{{::image.link}}" alt="{{::image.title}}">
                </a>
            </div>
        </div>
    </div>
    
    <toaster-container toaster-options="{'position-class': 'toast-bottom-right', 'limit': 5}"></toaster-container>
</div>